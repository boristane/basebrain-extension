{
  "manifest_version": 3,
  "name": "Basebrain Extension",
  "description": "Save memories to Basebrain",
  "version": "1.0.0",
  "icons": {
    "16": "icons/brain-logo.svg",
    "48": "icons/brain-logo.svg",
    "128": "icons/brain-logo.svg"
  },
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://basebrain.ai/*",
    "<all_urls>",
    "http://localhost/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/brain-logo.svg",
      "48": "icons/brain-logo.svg",
      "128": "icons/brain-logo.svg"
    },
    "default_title": "Toggle Basebrain sidebar"
  },
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}